<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thomas.projetiot.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fond" />


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:id="@+id/linearLayout2">

       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/linearLayout">


           <LinearLayout
               android:gravity="center"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp">


               <Button
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="@mipmap/ic_ampoule1" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Allumer lampe  "
                   android:textSize="12dp"
                   android:textColor="#1B4F08"/>

           </LinearLayout>

           <LinearLayout
               android:gravity="center"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp">

               <Button
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="@mipmap/ic_ampoule2" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Allumer lampe 2 "
                   android:textSize="12dp"
                   android:textColor="#1B4F08"/>

           </LinearLayout>

           <LinearLayout
               android:gravity="center"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp">

               <Button
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="@mipmap/ic_ampoule3" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Allumer lampe 3 "
                   android:textSize="12dp"
                   android:textColor="#1B4F08"/>

           </LinearLayout>

           <LinearLayout
               android:gravity="center"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp">

               <Button
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="@mipmap/ic_ampoule4" />
               <TextView
                   android:id="@+id/lampe4"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="allumer lampe 4"
                   android:textSize="12dp"
                   android:textColor="#1B4F08"/>

           </LinearLayout>



       </LinearLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_marginTop="15dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="DÃ©marrage du Chenillard"
               android:textSize="20dp"
               android:textColor="#ED7F10"
               android:gravity="center_horizontal"

               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:id="@+id/linearLayout1">

               <Button
                   android:layout_width="75dp"
                   android:layout_height="75dp"
                   android:background="@mipmap/ic_start"
                   android:id="@+id/start"
                   android:layout_marginLeft="80dp"
                   android:layout_marginTop="5dp"/>


               <Button
                   android:layout_width="75dp"
                   android:layout_height="75dp"
                   android:background="@mipmap/ic_stop"
                   android:id="@+id/stop"
                   android:layout_marginLeft="50dp"
                   android:layout_marginTop="5dp"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="70dp"
           android:layout_marginTop="20dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_marginTop="10dp"
               android:text="Changer vitesse"
               android:textSize="20dp"
               android:layout_marginRight="10dp"
               android:textColor="#ED7F10"
               android:gravity="center_horizontal"

               />

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="      "
               android:id="@+id/vitesse"
               android:textSize="20dp"/>

       </LinearLayout>
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="70dp"
           android:layout_marginTop="10dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="Changer ordre"
               android:textSize="20dp"
               android:layout_marginTop="10dp"
               android:textColor="#ED7F10"
               android:gravity="center_horizontal"
               android:layout_marginRight="10dp"
               />

           <EditText
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text=" 1 "
               android:id="@+id/ordre"/>


       </LinearLayout>




   </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="355dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:backgroundTint="@android:color/holo_orange_dark"/>




</RelativeLayout>

